<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>

  <main class="container my-5">
    <h2 class="text-center text-primary fw-bold mb-4">Payment Details</h2>

    <div class="row justify-content-center">
      <div class="col-md-6 col-sm-10">
        <div class="card shadow-lg border-0 rounded-4 p-4">
          <form id="paymentForm" onsubmit="return submitPayment(event)" method="POST" action="/user/home-booking/payment/<%= home._id %>/card-details">
            <div class="mb-3">
              <label for="cardName" class="form-label fw-bold">Cardholder Name</label>
              <input type="text" class="form-control" id="cardName" placeholder="John Doe" required>
            </div>

            <div class="mb-3">
              <label for="cardNumber" class="form-label fw-bold">Card Number</label>
              <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456"  maxlength="19" required>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="expiry" class="form-label fw-bold">Expiry Date</label>
                <input type="text" class="form-control" id="expiry" placeholder="MM/YY"  maxlength="5" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="cvv" class="form-label fw-bold">CVV</label>
                <input type="password" class="form-control" id="cvv" placeholder="123"  maxlength="4" required>
              </div>
            </div>

            <div class="mb-4">
              <label for="amount" class="form-label fw-bold">Total Amount</label>
              <input type="text" class="form-control" id="amount" value="â‚¹<%= Number(home.price) + 999 %>" readonly>
            </div>

            <button type="submit" id="payBtn" class="btn btn-success w-100 btn-lg">Pay Now</button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    function submitPayment(event) {
      event.preventDefault();
      const payBtn = document.getElementById("payBtn");
      payBtn.disabled = true;
      payBtn.innerHTML = `<span class="spinner-border spinner-border-sm me-2"></span>Processing...`;

      setTimeout(() => {
        payBtn.innerHTML = 'Pay Now';
        payBtn.disabled = false;
        document.getElementById("paymentForm").submit();
      }, 5000);
      setTimeout(() => {
        Swal.fire({
          icon: 'success',
          title: 'Payment Successful!',
          text: 'Your booking has been confirmed.',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,          
        });
      }, 2500);      
    }
  </script>
</body>
</html>
