<%- include('../partials/head') %>
    <link rel="stylesheet" href="output.css">
    <style>
       #search-bar {
        width: 50%;
        max-width: 600px;
        border-radius: 40px;
        padding: 15px;
        margin: auto;
        border: 1px solid #a7a6a6;
    }
    @media (max-width: 768px) {
        #search-bar {
            width: 100%;
        }
    }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6"> Welcome To EasyPG:</h2>
     <div>
        <input type="text" name="search-bar" id="search-bar" class="form-control mb-4" placeholder="Search homes by name or location..." onkeyup="filterHomes()">
      </div> 
      <div class="flex flex-wrap justify-center gap-6">
      <% registeredHome.forEach(home => { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm home-card">
            <img src="<%=home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2 " id="home-name"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-2" id="home-location" ><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / Month</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>
             <a href="/user/home-list" class="btn btn-success btn-sm">Book</a>
            </div>
          </div>
          <% })%>
      </div>
    </main>
    <%- include('../partials/footer') %>
    <script>
      function filterHomes() {
        const input = document.getElementById('search-bar').value.toLowerCase();
        const homeCards = document.querySelectorAll('.home-card');

        homeCards.forEach(card => {
          const homeName = card.querySelector('#home-name').textContent.toLowerCase();
          const homeLocation = card.querySelector('#home-location').textContent.toLowerCase();

          if (homeName.includes(input) || homeLocation.includes(input)) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      }
    </script>
</body>
</html>
