<%- include('../partials/head') %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/nav') %>

    <!-- Main Signup Section -->
    <main class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
        <div class="card shadow-lg p-4 w-100" style="max-width: 500px;">
            <h1 class="text-center text-danger mb-4">Sign Up</h1>

            <!-- Signup Form -->
            <form action="/signup" method="POST">
                <%- include('../partials/errors') %>

                <!-- Username -->
                <div class="mb-3">
                    <input type="text" name="username" placeholder="Enter your Name" required 
                        value="<%= oldInput !== 'undefined' ? oldInput.username : '' %>"
                        class="form-control" />
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <input type="email" name="email" placeholder="Enter your Email" required
                        value="<%= oldInput !== 'undefined' ? oldInput.email : '' %>"
                        class="form-control" />
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <input type="password" name="password" placeholder="Create a password" 
                        class="form-control" />
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <input type="password" name="confirmPassword" placeholder="Confirm your password" 
                        class="form-control" />
                </div>

                <!-- User Type -->
                <div class="mb-3">
                    <p class="fw-bold">User Type</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userType" value="user" 
                            <%= oldInput.userType === 'user' ? 'checked' : '' %>>
                        <label class="form-check-label">User</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userType" value="host" 
                            <%= oldInput.userType === 'host' ? 'checked' : '' %>>
                        <label class="form-check-label">Host</label>
                    </div>
                </div>

                <!-- Terms -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="terms" 
                        <%= oldInput !== 'undefined' ? 'checked' : '' %>>
                    <label class="form-check-label">Accept terms and conditions</label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-danger w-100">Sign Up</button>
            </form>

            <!-- Link to Login -->
            <div class="text-center mt-3">
                <p>Already have an account? <a href="/login" class="text-danger fw-bold">Login here</a></p>
            </div>
        </div>
    </main>
</body>
</html>
