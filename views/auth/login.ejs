<%- include('../partials/head') %>
</head>
<body class="bg-light">
    <%- include('../partials/nav') %>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
            <h2 class="text-center text-danger mb-4 fw-bold">Login</h2>

            <!-- Show Errors -->
            <%- include('../partials/errors') %>

            <form action="/login" method="POST">
                <!-- Email -->
                <div class="mb-3">
                    <input 
                        type="email" 
                        name="email" 
                        class="form-control" 
                        placeholder="Enter your Email" 
                        value="<%= oldInput ? oldInput.email : '' %>"
                        required
                    >
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <input 
                        type="password" 
                        name="password" 
                        class="form-control" 
                        placeholder="Enter Password" 
                        value="<%= oldInput ? oldInput.password : '' %>"
                        required
                    >
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-danger w-100 fw-bold">
                    Log In
                </button>

                <div class="text-center mt-2">
                    <span>Don't have an account? </span>
                    <a href="/signup" class="text-decoration-none text-danger fw-bold">Sign Up</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
