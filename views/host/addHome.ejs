<%- include('../partials/head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/nav') %>

    <main class="container my-5">
        <div class="card shadow-lg border-0 rounded-4 p-4 mx-auto" style="max-width: 700px;">
            <h1 class="text-center text-danger mb-4">
                <%= editing ? "Edit" : "Register" %> Your Home
            </h1>

            <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">
                <input type="hidden" name="oldPhotoUrl" value="<%= editing ? home.photoUrl : '' %>">

                <div class="mb-3">
                    <label for="houseName" class="form-label fw-bold">House Name</label>
                    <input type="text" class="form-control" id="houseName" name="houseName"
                           placeholder="Enter your House Name"
                           value="<%= editing ? home.houseName : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label fw-bold">Price Per Night (₹)</label>
                    <input type="number" class="form-control" id="price" name="price"
                           placeholder="Enter Price"
                           value="<%= editing ? home.price : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label fw-bold">Location</label>
                    <input type="text" class="form-control" id="location" name="location"
                           placeholder="Enter Location"
                           value="<%= editing ? home.location : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="rating" class="form-label fw-bold">Rating (1-5)</label>
                    <input type="number" class="form-control" id="rating" name="rating"
                           placeholder="Enter Rating"
                           value="<%= editing ? home.rating : '' %>" min="1" max="5" step="0.1">
                </div>

                <div class="mb-3">
                    <label for="photoUrl" class="form-label fw-bold">Upload Home Image</label>
                    <input type="file" class="form-control" id="photoUrl" name="photoUrl" accept="image/png, image/jpg, image/jpeg">
                    
                    <% if (editing && home.photoUrl) { %>
                        <div class="mt-3 text-center">
                            <p class="fw-semibold">Current Image:</p>
                            <img src="/<%= home.photoUrl %>" alt="Home Image" class="img-fluid rounded" style="max-height: 200px;">
                        </div>
                    <% } %>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <%= editing ? 'Update Home' : 'Add Home' %>
                    </button>
                </div>
            </form>
        </div>
    </main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


