          <a class="btn btn-danger " href="/signup">Sign Up</a>
        <% } else { %>
          <form action="/logout" method="post" class="m-0">
            <button class="btn btn-warning">Logout</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
