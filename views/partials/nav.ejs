            <li class="nav-item">
              <a class="nav-link <%= (currentPath === '/user/watchlist') ? 'active' : '' %>" 
                 href="/user/watchlist"> Favourites</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (currentPath === '/user/my-profile') ? 'active' : '' %>" 
                 href="/user/my-profile"> Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (currentPath === '/user/about-us') ? 'active' : '' %>" 
                href="/user/about-us"> About US</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= (currentPath === '/user/contact-us') ? 'active' : '' %>" 
                   href="/user/contact-us"> Contact</a>
              </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link <%= (currentPath === '/host/add-home') ? 'active' : '' %>" 
                 href="/host/add-home"> Add Home</a>
